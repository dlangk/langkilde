---
import "../styles/global.css";
import DarkModeToggle from "../components/DarkModeToggle.astro";
import MobileMenu from "../components/MobileMenu.astro";
import Analytics from "../components/Analytics.astro";

const { title, description = "Essays on entrepreneurship, AI, technology, and business by Daniel Langkilde." } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="https://storage.googleapis.com/langkilde-se-images/langkilde.jpg" />
    <meta property="og:url" content={Astro.url.href} />
    <meta property="og:type" content="website" />
    <Analytics />
  </head>

  <body>
    <canvas id="canvas-background"></canvas>
    <MobileMenu />
    <DarkModeToggle />
    <div class="layout-container">
      <slot />
    </div>
    <script src="../scripts/main.ts"></script>
  </body>
</html>
